{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [ "DOM" ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "*": ["dist/*"], // Ensure Webpack resolves source files
    },
    "isolatedModules": true, // https://www.typescriptlang.org/tsconfig/#isolatedModules
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "handler.ts",
  ]
}
